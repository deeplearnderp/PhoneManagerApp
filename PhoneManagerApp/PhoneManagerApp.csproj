<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net8.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <UseWindowsForms>true</UseWindowsForms>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <!-- NuGet Packages -->
    <ItemGroup>
        <PackageReference Include="Microsoft-WindowsAPICodePack-Core" Version="1.1.5"/>
        <PackageReference Include="Microsoft-WindowsAPICodePack-Shell" Version="1.1.5"/>
        <PackageReference Include="SharpAdbClient" Version="2.3.23"/>
    </ItemGroup>

    <!-- Legacy Folder Exclusion -->
    <ItemGroup>
        <!-- Exclude everything under the Legacy folder -->
        <Compile Remove="Legacy\**\*.cs"/>
        <None Include="Legacy\**\*.cs"/>
    </ItemGroup>
    <ItemGroup>
      <Folder Include="Resources\" />
    </ItemGroup>
    <ItemGroup>
      <None Remove="Resources\device.png" />
      <EmbeddedResource Include="Resources\device.png" />
      <None Remove="Resources\notification.png" />
      <EmbeddedResource Include="Resources\notification.png" />
      <None Remove="Resources\charging.png" />
      <EmbeddedResource Include="Resources\charging.png" />
    </ItemGroup>

    <!-- Optional: If you later move it under Core, you can re-enable this -->
    <!-- <ItemGroup>
      <Compile Remove="Core\Legacy\**\*.cs" />
      <None Include="Core\Legacy\**\*.cs" />
    </ItemGroup> -->

</Project>
